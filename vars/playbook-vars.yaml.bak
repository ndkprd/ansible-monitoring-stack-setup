#TARGET HOST
target_host_base_domain: 'branch-testing.asdp.id'
target_host_network_interface: 'ens192'
target_host_branch: 'branch-testing'
target_host_location: 'branch-location'

#NEEDED SOFTWARE PACKAGES
basic_packages:
  - epel-release
  - net-tools
  - tree
  - nmap
  - nano
  - speedtest-cli
  - curl
  - yum-utils
  - git
docker_packages:
  - ca-certificates
  - python3-pip
  - python3-setuptools
  - docker-ce
  - docker-ce-cli
  - containerd.io
  - docker-buildx-plugin
  - docker-compose-plugin

#CONTAINER IMAGE VERSION
traefik_image_version: 'latest'
grafana_image_version: 'latest'
prometheus_image_version: 'latest'
snmp_exporter_image_version: 'latest'
blackbox_exporter_image_version: 'latest'
node_exporter_image_version: 'latest'

#CONTAINER ENV
grafana_admin_user: 'admin'
grafana_admin_password: 'admin'

